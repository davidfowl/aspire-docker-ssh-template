<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Powered by Aspire</title>
		<style>
			:root {
				--aspire-purple: #512BD4;
				--aspire-purple-light: #7455DD;
				--aspire-purple-lighter: #9780E5;
				--aspire-bg-dark: #1a1a2e;
				--aspire-bg-darker: #0f0f1a;
				--aspire-text: #ffffff;
				--aspire-text-muted: #a0a0b0;
				--aspire-border: rgba(81, 43, 212, 0.3);
			}
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			body {
				font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
				min-height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				background: var(--aspire-bg-darker);
				background-image:
					radial-gradient(ellipse at top, rgba(81, 43, 212, 0.2) 0%, transparent 50%),
					radial-gradient(ellipse at bottom right, rgba(81, 43, 212, 0.15) 0%, transparent 40%);
				color: var(--aspire-text);
				padding: 2rem;
			}
			main {
				text-align: center;
				max-width: 650px;
			}
			.logo {
				margin-bottom: 1.5rem;
			}
			.logo svg {
				width: 80px;
				height: 80px;
			}
			h1 {
				font-size: 2.75rem;
				font-weight: 700;
				margin-bottom: 0.5rem;
				background: linear-gradient(135deg, var(--aspire-text) 0%, var(--aspire-purple-light) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
			.subtitle {
				font-size: 1.1rem;
				color: var(--aspire-purple-light);
				margin-bottom: 1.5rem;
				font-weight: 500;
			}
			p {
				font-size: 1.15rem;
				color: var(--aspire-text-muted);
				margin-bottom: 1.25rem;
				line-height: 1.7;
			}
			.tagline {
				font-size: 1rem;
				color: var(--aspire-text-muted);
				margin-bottom: 2rem;
				padding: 1rem 1.5rem;
				background: rgba(81, 43, 212, 0.1);
				border: 1px solid var(--aspire-border);
				border-radius: 0.5rem;
			}
			.links {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
				margin-bottom: 2rem;
			}
			a {
				color: var(--aspire-text);
				background: var(--aspire-purple);
				padding: 0.75rem 1.75rem;
				border-radius: 0.5rem;
				text-decoration: none;
				font-weight: 600;
				font-size: 0.95rem;
				transition: all 0.2s ease;
				border: 1px solid transparent;
			}
			a:hover {
				background: var(--aspire-purple-light);
				transform: translateY(-2px);
				box-shadow: 0 4px 20px rgba(81, 43, 212, 0.4);
			}
			a.secondary {
				background: transparent;
				border: 1px solid var(--aspire-border);
				color: var(--aspire-text-muted);
			}
			a.secondary:hover {
				background: rgba(81, 43, 212, 0.15);
				border-color: var(--aspire-purple);
				color: var(--aspire-text);
				box-shadow: none;
			}
			.status {
				display: inline-flex;
				align-items: center;
				gap: 0.75rem;
				background: var(--aspire-bg-dark);
				padding: 0.75rem 1.5rem;
				border-radius: 2rem;
				font-size: 0.9rem;
				color: var(--aspire-text-muted);
				border: 1px solid var(--aspire-border);
			}
			.status-dot {
				width: 8px;
				height: 8px;
				background: #22c55e;
				border-radius: 50%;
				animation: pulse 2s infinite;
			}
			@keyframes pulse {
				0%, 100% { opacity: 1; }
				50% { opacity: 0.5; }
			}
			.tech-stack {
				display: flex;
				gap: 0.5rem;
				justify-content: center;
				margin-top: 2rem;
				flex-wrap: wrap;
			}
			.tech-badge {
				background: rgba(255, 255, 255, 0.05);
				padding: 0.4rem 0.8rem;
				border-radius: 0.25rem;
				font-size: 0.8rem;
				color: var(--aspire-text-muted);
				border: 1px solid rgba(255, 255, 255, 0.1);
			}
		</style>
	</head>
